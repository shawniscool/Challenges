<h1>Create a new challenge</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@challenge) do |f| %>
      <%= f.text_field :title, placeholder:"Title" %>

      <%= f.text_field :task, placeholder:"Challenge description" %>

      <%= f.label "end Date" %>
      <%= f.date_field :endDate %>

      <%= f.number_field :money, :step=>"any", placeholder:"Money amount" %>

      <%= f.submit "Create my challenge", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>