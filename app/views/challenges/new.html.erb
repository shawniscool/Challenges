<h1>Create the challenge</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@challenge) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :task%>
      <%= f.text_field :task %>

      <%= f.submit "Create my challenge", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>